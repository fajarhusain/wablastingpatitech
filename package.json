{
  "name": "whatsapp-labs-desktop",
  "version": "2.0.0",
  "description": "Professional WhatsApp Bulk Message Sender Desktop Application",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.whatsapplabs.desktop",
    "productName": "WA Blast PATITECH Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "csv-parser": "^3.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "qrcode": "^1.5.3",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "whatsapp",
    "bulk",
    "messaging",
    "desktop",
    "electron",
    "automation",
    "marketing"
  ],
  "author": "WA Blast PATITECH Team",
  "license": "MIT"
}
